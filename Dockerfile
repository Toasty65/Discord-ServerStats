ENV GUILDID=123456789
ENV MEMBERCOUNT_CHANNELNAME="Members: "
ENV MEMBERGOAL_CHANNELNAME="Member Goal: "
ENV ONLINEMEMBERS_CHANNELNAME="Online: "
ENV TOKEN=123456789

CMD [ "node", "index.js" ]